<div>
  <div>
    <h1>
      List of all songs queues
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new songs queue
    </h2>

    <form action="/insert_songs_queue" method="post">
      <div>
        <label for="song_id_box">
          Song
        </label>

        <input type="text" id="song_id_box" name="query_song_id">
      </div>

      <div>
        <label for="singer_id_box">
          Singer
        </label>

        <input type="text" id="singer_id_box" name="query_singer_id">
      </div>

      <div>
        <input type="checkbox" id="played_box" name="query_played" value="1">

        <label for="played_box">Played</label>
      </div>

      <button>
        Create songs queue
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table>
      <tr>
        <th>
          ID
        </th>

        <th>
          Song
        </th>

        <th>
          Singer
        </th>

        <th>
          Played
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_songs_queues.each do |a_songs_queue| %>
      <tr>
        <td>
          <%= a_songs_queue.id %>
        </td>

        <td>
          <%= a_songs_queue.song_id %>
        </td>

        <td>
          <%= a_songs_queue.singer_id %>
        </td>

        <td>
          <%= a_songs_queue.played %>
        </td>

        <td>
          <%= time_ago_in_words(a_songs_queue.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_songs_queue.updated_at) %> ago
        </td>

        <td>
          <a href="/songs_queues/<%= a_songs_queue.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
